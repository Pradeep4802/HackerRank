// Write the following expression in a java program:  v^2 - u^2 / 2as

import java.util.Scanner;

public class velocity {
	public static void main(String[] args) {
		Scanner vel = new Scanner(System.in);
		
		// System.out.println("Enter the Final velocity: ");
		float fin_velo;
		System.out.println("Enter the Initial velocity: ");
		float ini_velo = vel.nextFloat();
		System.out.println("Enter the Acceleration: ");
		float acc  = vel.nextFloat();
		System.out.println("Enter the displacement: ");
		float dis = vel.nextFloat();
		
		fin_velo = (float)Math.sqrt((float)Math.pow(ini_velo, 2) + (2*acc*dis));
		System.out.println("The velocity of the object: " + fin_velo);
	}
}